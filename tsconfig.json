{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es5", //2015
      "es2016",
      "es2017",
    ],
    // "module": "es2015",
    /* "module": "commonjs", */
    "sourceMap": true,
    "baseUrl": "./src/*",
    "paths": {
      "*.ts": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "typesRoot": ["./node_modules/@types", "./types"]

}
